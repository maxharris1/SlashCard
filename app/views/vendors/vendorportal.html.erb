
<div class="container">
  <h2 align="center"><%= @vendors.name %></h2>
  <div class="well col-xs-8 col-xs-offset-2">
    <h4 class="center"><strong>Description: <%= @vendors.description %></strong></h4>
    <hr>


    <%= link_to edit_vendor_path(@vendors),method: :get,class: "btn btn-info btn-xs",form: {style: 'display:inline-block; margin:2px'} do %>
      <i class="glyphicon glyphicon-edit"></i> Edit
      <% end %><%= link_to profile_path,method: :get,class: "btn btn-success btn-xs",form: {style: 'display:inline-block; margin:2px'} do %>
      <i class="glyphicon glyphicon-chevron-left"></i> Back
      <% end %><%= button_to @vendors,method: :delete,data: {confirm: "Are you sure you want to delete this Vendor?"}, class: "btn btn-danger btn-xs",form: {style: 'display:inline-block;'} do %>
      <i class="glyphicon glyphicon-trash"></i> Delete
    <% end %>

  </div>


  <div class="container">
    <table class="table table-striped custab">
      <thead>
      <tr>
        <th>Discount:</th>
        <th>Actions: <%= link_to "Add Discount", new_discount_path(vendor_id: @vendors.id), class: "btn btn-primary btn-xs" %></th>
      </tr>
      </thead>
      <% @vendor_discounts.each do |v| %>
        <tr>
          <td><%= v.discount %></td>
          <td><%= link_to edit_discount_path(v,vendor_id: @vendors.id),method: :get,class: "btn btn-info btn-xs",form: {style: 'display:inline-block; margin:2px'} do %>
              <i class="glyphicon glyphicon-edit"></i> Edit
            <% end %><%= button_to discount_path(v),method: :delete,data: {confirm: "Are you sure you want to delete this Vendor?"}, class: "btn btn-danger btn-xs",form: {style: 'display:inline-block;'} do %>
              <i class="glyphicon glyphicon-trash"></i> Delete
            <% end %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>