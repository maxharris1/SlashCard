<div class="container">
<h1>Welcome <%= current_user.first_name %> <%= current_user.last_name %></h1>

  <%= link_to 'Edit Profile', edit_user_registration_path,class: "btn btn-primary btn-s" %>




  <div class="container marketing">
    <div class="row featurette">
      <div class="col-md-7 order-md-2">
      </div>
      <div class="col-md-5 order-md-1">
        <table class="table table-striped custab">
          <thead>
          <h2>My Vendors</h2>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th><%= link_to 'Add Vendor', createvendor_path, class: "btn btn-primary btn-xs" %></th>
          </tr>
          </thead>
          <% @user_vendors.each do |v| %>
            <tr>
              <td><%= v.name %></td>
              <td><%= v.description %></td>
              <td> <%= link_to edit_vendor_path(v), class: "btn btn-info btn-xs" do %>
                  <i class="glyphicon glyphicon-edit"></i> Edit
                <% end %><%= link_to vendorportal_path(v), class: "btn btn-success btn-xs" do %>
                  <i class="glyphicon glyphicon-eye-open"></i> View
                <% end %></td>

            </tr>
          <% end %>
        </table>

      </div>
    </div>











</div>
</div>
