<li class="dropdown pc-menu">

  <a id="user-settings" class="dropdown-toggle" data-toggle="dropdown" href="#">
    <%if current_user.avatar.present? %>
      <span class="nav_profile"  valign="center"><%= image_tag current_user.avatar.url(:profile)%></span>
      <%else %>
      <span class="glyphicon glyphicon-user"  valign="center"></span>
      <%end %>
    <span id="user-name"  valign="center"><%= current_user.first_name %></span>
    <span class="caret"  valign="center"></span>
  </a>

  <ul class="dropdown-menu navbar-nav mr-auto mt-2 mt-lg-0" role="menu">
    <li><%= link_to 'My Profile', profile_path %></li>
    <li><%= link_to 'Log out', destroy_user_session_path, method: :delete%></li>
  </ul>
</li>


<li class="mobile-menu">
  <%= link_to 'Edit Profile', edit_user_registration_path %>
</li>
